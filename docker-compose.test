version: '2'
services:
  db:
    image: mongo
    ports:
      - "27017:27017"
  web:
    build: .
    command: ping -c 10 google.com && ping $MONGODB_HOST
    ports:
      - "3000:3000"
    links:
      - "db"
    environment:
      - MONGODB_HOST=db
  web2:
    image: node
    command: sleep 10 && ping $MONGODB_HOST
    ports:
      - "3000:3000"
    environment:
      - MONGODB_HOST=db
  web3:
    image: node
    command: ping $MONGODB_HOST
    ports:
      - "3000:3000"
    links:
      - "db"
    environment:
      - MONGODB_HOST=db
